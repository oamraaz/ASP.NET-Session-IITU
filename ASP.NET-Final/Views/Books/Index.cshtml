@model IEnumerable<ASP.NET_Final.Models.Book>

@{
    ViewData["Title"] = "Index";
}

<h1>Lets buy or publish to sell your book!</h1>

<p>
    <a asp-action="Create">Publish for sale</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Price ($)
            </th>
            <th>
                Author
            </th>
            <th>
                Picture
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BooksName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BooksPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BooksAuthor)
            </td>
            <td>
                <img src="~/Images/@item.BooksPage" class="rounded-circle" width="100" height="140" asp-append-version = "true" />
            </td>
            <td>
                @if (item.BooksAuthor != User.Identity.Name)
                {
                    <a asp-action="Delete" asp-route-id="@item.Id">Buy</a>
                }
                else
                {
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
