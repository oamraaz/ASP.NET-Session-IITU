@model ASP.NET_Final.Models.Book

@{
    ViewData["Title"] = "Delete";
}

<h1>Purchase</h1>

<h3>You need to input your credit card to buy this book</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Title
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BooksName)
        </dd>
        <dt class = "col-sm-2">
            Price ($)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BooksPrice)
        </dd>
        <dt class = "col-sm-2">
            Published by: 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BooksAuthor)
        </dd>
        <dt class = "col-sm-2">
            Image
        </dt>
        <dd class = "col-sm-10">
            <img src="~/Images/@Model.BooksPage" class="rounded-circle" width="100" height="140" asp-append-version = "true" />
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Buy" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
