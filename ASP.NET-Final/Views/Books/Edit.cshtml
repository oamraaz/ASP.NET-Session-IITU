@model ASP.NET_Final.Models.Book

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="BooksName" class="control-label">Title</label>
                <input asp-for="BooksName" class="form-control" />
                <span asp-validation-for="BooksName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BooksPrice" class="control-label">Price($)</label>
                <input asp-for="BooksPrice" class="form-control" />
                <span asp-validation-for="BooksPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
